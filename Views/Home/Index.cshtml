@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
	<link rel="stylesheet" href="~/WebLabsV03.UI.styles.css" asp-append-
		  version="true" />
		  <style>
			
	</style>
</head>
<body>
	<header>
		<div class="container">
			<!-- Панель навигации -->
			
			<!-- Панель навигации -->
			<nav class="navbar navbar-expand-md navbar-dark bg-dark">
				<!-- меню сайта -->
				<a class="navbar-brand" href="#">Лб 1 </a>
				<div class="navbar-nav">
					<a class="nav-item nav-link active" href="#">Юхневич</a>
					<a class="nav-item nav-link" href="#">Каталог</a>
					<a class="nav-item nav-link" href="#">Администрирование</a>
				</div>
				<!-- меню сайта - конец -->


				<!-- Информация пользователя -->
				<a href="#" class="navbar-text ms-auto">
					00,0 руб <i class="fa-solid fa-cart-shopping"></i> (0)
				</a>
				<div class="dropdown ms-4 nav-color">
					<button class="btn btn-secondary dropdown-toggle"
							type="button" id="dropdownMenuButton"
							data-bs-toggle="dropdown"
							aria-expanded="false">
						User@gmail.com
						<img src="images/image.png" width="30"
							 alt="User" class="rounded nav-color" />
					</button>
					<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						<li>
							<span class="dropdown-item-text">
								<img src="images/image.png"
									 width="50" alt="User" class="rounded" />
								user@gmail.com
							</span>
						</li>
						<li><hr class="dropdown-divider"></li>
						<li>
							<form id="logoutForm" class="form-inline" action="#">
								<button id="logout" type="submit" class="nav-link 
btn btn-link text-dark">
									Logout
								</button>
							</form>
						</li>
					</ul>
				</div>
				<!-- Информация пользователя - конец -->
			</nav> <!-- Панель навигации - конец -->
		</div><!-- container - конец -->
	</header><!-- header - конец -->
	<main class="container">

		<h1>Лабораторная работа 1</h1>

		
		<h2>@ViewData["Text"]</h2>
		<h2>Список</h2>

		<ol type="A">
			@for (int i = 1; i < 6; i++)
			{
				<li>элемент @i списка</li>
			}
		</ol>

		<!--ol type="A" class="ms-1">
			<li>элемент 1 списка</li>
			<li>элемент 2 списка</li>
		</ol-->
		<hr />
		<h2>Форма</h2>
		
		<form method="post">
			<table style="width: 100%"  >
				<colgroup>
					<col span="1" style="width: 13%;">
				</colgroup>
				<tr>
					<td> </td>
					<td>
						<div>
							<input name="check1" type="checkbox" id="scales" />
							<label for="scales">Чек-бокс 1</label>
						</div>
					</td>
				</tr>
				<tr>
					<td> </td>
					<td>
						<div>
							<input name="check2" type="checkbox" id="scales2" />
							<label for="scales2">Чек-бокс 2</label>
						</div>
					</td>
				</tr>
				<tr >
					<td></td>
					<td>
						<div class="d-flex form-group mb-3">
							<div class="form-check me-4">
								<input name="radio1" class="form-check-input" type="radio" id="flexRadioDefault1">
								<label class="form-check-label" for="flexRadioDefault1">
									Радио-1
								</label>
							</div>
							<div class="form-check me-4">
								<input name="radio2" class="form-check-input" type="radio" id="flexRadioDefault2">
								<label class="form-check-label" for="flexRadioDefault1">
									Радио-2
								</label>
							</div>
							<div class="form-check me-4">
								<input name="radio3" class="form-check-input" type="radio" id="flexRadioDefault3">
								<label class="form-check-label" for="flexRadioDefault1">
									Радио-3
								</label>
							</div>
						</div>
					</td>
				</tr>
				<tr>
					<td>Логин:</td>
					<td>
						<nav class="navbar navbar-light bg-light">
							<input name="login" id="log" class="form-control mr-sm-2" type="search" placeholder="Введите имя..." aria-label="Search">
						</nav>
					</td>
				</tr>
				<tr>
					<td>Пароль:</td>
					<td>
						<nav class="navbar navbar-light bg-light">
							<input name="password" id="pass" class="form-control mr-sm-2" type="password" placeholder="Введите пароль..." aria-label="Search">
						</nav>
					</td>
				</tr>
				<tr>
					<td>
						<button type="submit" class="btn btn-primary">Отправить</button>
					</td>
				</tr>
			</table>
		</form>


	</main>
	<footer class="fixed-bottom">
		<div class="container">
			

			<div class="navbar navbar-dark navbar-expand-md bg-dark justify-content-end">
				<div class="navbar-nav ms-auto">
					<a class="nav-item nav-link" href="http://www.facebook.com">
						<i class="fa-brands fa-facebook-f fa-2x"></i>
					</a>
					<a class="nav-item nav-link" href="http://www.vk.com">
						<i class="fa-brands fa-vk fa-2x"></i>
					</a>
					<a class="nav-item nav-link" href="http://www.twitter.com">
						<i class="fa-brands fa-twitter fa-2x"></i>
					</a>
				</div>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
</body>


</html>